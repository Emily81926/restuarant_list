<div class="container">
  <h1>Account Register</h1>
  <form action="/users/register" method="POST">
  <div class="form-group row">
    <input type="text" placeholder="Name" id="name" name="name" class="form-control" >
  </div>

  <div class="form-group row">
    <input type="email" placeholder="Email" id="email" name="email" class="form-control" required>
  </div>

  <div class="form-group row">
    <input type="password" placeholder="Password" id="password" name="password" class="form-control" required>
  </div>

  <div class="form-group row">
    <input type="password" placeholder="Confirm Password" name="confirmPassword" id="confirmPassword" class="form-control" required>
  </div>

  <div class="input-group-append d-md-flex justify-content-md-end">
    <button type="submit" class="btn btn-secondary" role="button" aria-pressed="true">Register</button>
  </div>
  </form>
  <p class="lead mt-4">
    Have An Account? <a href="/users/login">Login</a>
  </p>
</div>